#!/usr/bin/env python3
"""
Fake Hacker Log Display - FAST NONSTOP VERSION
Script ini menampilkan log palsu dengan efek visual hacking yang cepat dan tidak berhenti
"""

import time
import random
import sys
from datetime import datetime

# Warna ANSI untuk terminal
class Colors:
    GREEN = '\033[92m'
    RED = '\033[91m'
    YELLOW = '\033[93m'
    BLUE = '\033[94m'
    CYAN = '\033[96m'
    MAGENTA = '\033[95m'
    WHITE = '\033[97m'
    BOLD = '\033[1m'
    END = '\033[0m'

def print_fast(text, color=''):
    """Print text cepat dengan warna"""
    print(color + text + Colors.END)

def generate_ip():
    """Generate IP address palsu"""
    return f"{random.randint(1,255)}.{random.randint(1,255)}.{random.randint(1,255)}.{random.randint(1,255)}"

def generate_port():
    """Generate port number"""
    return random.randint(1024, 65535)

def show_banner():
    """Tampilkan banner hacker style"""
    banner = f"""{Colors.GREEN}{Colors.BOLD}
    ╔═══════════════════════════════════════════════╗
    ║     CYBER SECURITY PENETRATION TOOLKIT       ║
    ║            [ AUTHORIZED ACCESS ]              ║
    ╚═══════════════════════════════════════════════╝
    {Colors.END}"""
    print(banner)

def scanning_logs():
    """Generate scanning logs cepat"""
    ip = generate_ip()
    print_fast(f"{Colors.YELLOW}[SCAN] Target: {ip}", Colors.YELLOW)
    
    # Random ports
    for _ in range(random.randint(2, 4)):
        port = generate_port()
        status = random.choice(["OPEN", "OPEN", "FILTERED", "CLOSED"])
        service = random.choice(["HTTP", "SSH", "FTP", "SMTP", "MySQL", "Redis", "MongoDB", "PostgreSQL"])
        
        if status == "OPEN":
            color = Colors.GREEN
        elif status == "FILTERED":
            color = Colors.YELLOW
        else:
            color = Colors.RED
        
        print_fast(f"{color}  └─ Port {port} {status} - {service}", color)

def exploit_logs():
    """Generate exploit logs"""
    exploits = [
        "CVE-2024-1234: Remote Code Execution",
        "CVE-2024-5678: SQL Injection",
        "CVE-2024-9012: Buffer Overflow",
        "Zero-Day: Authentication Bypass",
        "CVE-2024-3456: XSS Vulnerability",
        "CVE-2024-7890: Privilege Escalation",
        "CVE-2024-4321: Directory Traversal"
    ]
    
    exploit = random.choice(exploits)
    print_fast(f"{Colors.MAGENTA}[EXPLOIT] Testing: {exploit}", Colors.MAGENTA)
    
    success = random.choice([True, True, True, False])
    if success:
        print_fast(f"{Colors.GREEN}[SUCCESS] Exploit successful! Access granted.", Colors.GREEN)
    else:
        print_fast(f"{Colors.RED}[FAILED] Exploit blocked by security.", Colors.RED)

def data_extraction_logs():
    """Generate data extraction logs"""
    files = [
        "database_backup.sql",
        "user_credentials.txt",
        "financial_records.xlsx",
        "api_keys.json",
        "customer_data.csv",
        "admin_passwords.txt",
        "encryption_keys.pem",
        "session_tokens.db",
        "config_secrets.env",
        "private_keys.key"
    ]
    
    filename = random.choice(files)
    size = random.randint(100, 9999)
    print_fast(f"{Colors.GREEN}[DOWNLOAD] {filename} ({size} KB)", Colors.GREEN)

def system_logs():
    """Generate system logs"""
    log_messages = [
        "Authentication successful for user: root",
        "SSH connection established from {ip}",
        "Firewall rule bypassed: Port {port}",
        "Privilege escalation: root access obtained",
        "Database connection established",
        "Encryption key retrieved successfully",
        "Backdoor installed: /tmp/.hidden/shell.sh",
        "Process injected: PID {pid}",
        "Memory dump completed: {size}GB",
        "Network traffic redirected to proxy",
        "Keylogger activated on terminal session",
        "System vulnerability detected: CVE-2024-{num}",
        "Malware deployed: trojan.exe",
        "Brute force attack: {attempts} attempts",
        "Password cracked: hash_{hash}",
        "Admin panel accessed: /admin/dashboard",
        "Session hijacked: token_{token}",
        "File encryption completed",
        "Reverse shell established",
        "Payload executed successfully"
    ]
    
    timestamp = datetime.now().strftime("%H:%M:%S")
    message = random.choice(log_messages)
    message = message.format(
        ip=generate_ip(),
        port=generate_port(),
        pid=random.randint(1000, 9999),
        num=random.randint(1000, 9999),
        size=round(random.uniform(0.5, 5.0), 1),
        attempts=random.randint(100, 9999),
        hash=random.randint(1000, 9999),
        token=random.randint(10000, 99999)
    )
    
    log_level = random.choice(["INFO", "WARN", "CRIT", "INFO", "INFO"])
    if log_level == "INFO":
        color = Colors.WHITE
    elif log_level == "WARN":
        color = Colors.YELLOW
    else:
        color = Colors.RED
    
    print_fast(f"{color}[{timestamp}] [{log_level}] {message}", color)

def network_traffic_logs():
    """Generate network traffic logs"""
    src_ip = generate_ip()
    dst_ip = generate_ip()
    protocol = random.choice(["TCP", "UDP", "ICMP", "HTTP", "HTTPS", "DNS", "SSH", "FTP"])
    bytes_transferred = random.randint(1024, 999999)
    
    print_fast(
        f"{Colors.CYAN}[PACKET] {src_ip}:{generate_port()} -> "
        f"{dst_ip}:{generate_port()} | {protocol} | {bytes_transferred} bytes",
        Colors.CYAN
    )

def random_log():
    """Generate random log type"""
    log_type = random.choice([
        system_logs,
        system_logs,  # Lebih sering muncul
        system_logs,
        network_traffic_logs,
        scanning_logs,
        exploit_logs,
        data_extraction_logs
    ])
    log_type()

def main():
    """Main function - infinite loop"""
    try:
        show_banner()
        print_fast(f"{Colors.GREEN}[*] Starting continuous monitoring... (Press Ctrl+C to stop){Colors.END}\n")
        
        # Infinite loop untuk nonstop
        while True:
            random_log()
            time.sleep(0.05)  # Delay super kecil untuk kecepatan
            
    except KeyboardInterrupt:
        print_fast(f"\n\n{Colors.RED}[!] Monitoring stopped by user{Colors.END}")
        print_fast(f"{Colors.YELLOW}[!] This was a simulation for entertainment purposes only{Colors.END}\n")
        sys.exit(0)

if __name__ == "__main__":
    main()
